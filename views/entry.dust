<html>
	<!-- SELF LINK -->
	<tr>
		<td class="top-action">
			<img src="/img/folder.svg">
			<a href='/dir/display/{path}'>.</a>
		</td>
		<td>
		</td>
		<td>
		</td>
		<td>
		</td>
	</tr>
	<!-- LINK TO PARENT -->
	{@eq key=squery value=true type="boolean"}
		{@ne key=previous value="" type="string"}
			<tr>
				<td class="top-action">
					<i class="fas fa-folder"></i>
					<a href='/dir/display/{previous}'>..</a>
				</td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		{/ne}
	{/eq}
	<!-- FILES -->
	{# list}
	<tr>
		<!-- FILE IS NOT A DIRECTORY -->
		{@eq key=isDir value=false type="boolean"}
			<td class="tags">
				{@eq key=extension value=txt type="string"}{/eq}
				{@eq key=extension value=gif type="string"}{/eq}
				{@eq key=extension value=mp4 type="string"}{/eq}
				<img src="/img/file-noExtension.svg">
				<!-- <img src="https://cdn3.iconfinder.com/data/icons/brands-applications/512/File-512.png"> -->
				<div>
					<a href='/file/preview/{path}' target="_blank">{name}</a>
					{> tags /}
				</div>
			</td>
			<td>
				{size}
			</td>
			<td>
				<!-- {timeCreated}<br> -->
				{dateCreated}
			</td>
			<td>
				<input type="submit" value="" class="deleteFile" data-toggle="modal" data-target="#exampleModal">
				<form class="file-actions" method="POST">
					<input type="submit" value="" formaction="" class="getLink">
					<input type="submit" value="" formaction="/file/{path}?_method=GET" class="downloadFile">
				</form>
				<input type="submit" value="" class="renameFile" data-toggle="modal" data-target="#exampleModal">
			</td>
		<!-- FILE IS A DIRECTORY -->
		{:else}
			<td>
				<img src="/img/folder.svg">
				<a href='/dir/display/{path}'>{name}</a>
			</td>
			<td>
			</td>
			<td>
				<!-- {timeCreated}<br> -->
				{dateCreated}
			</td>
			<td>
				<input type="submit" value="" class="deleteDirectory" data-toggle="modal" data-target="#exampleModal">
				<form class="file-actions" method="POST">
					<input type="submit" value="" formaction="" class="getDirectoryLink">
					<input type="submit" value="" formaction="/dir/download/{path}?_method=GET" class="downloadDirectory">
				</form>
				<input type="submit" value="" formaction="" class="renameDirectory" data-toggle="modal" data-target="#exampleModal">

			</td>
		{/eq}
	</tr>
	{/ list}
</html>
