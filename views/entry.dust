<html>
	<!-- SELF LINK -->
	<tr>
		<td class="top-action">
			<i class="fas fa-folder"></i>
			<a href='/dir/display/{path}'>.</a>
		</td>
		<td>
		</td>
		<td>
		</td>
		<td>
		</td>
	</tr>
	<!-- LINK TO PARENT -->
	{@eq key=squery value=true type="boolean"}
		{@ne key=previous value="" type="string"}
			<tr>
				<td class="top-action">
					<i class="fas fa-folder"></i>
					<a href='/dir/display/{previous}'>..</a>
				</td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		{/ne}
	{/eq}
	<!-- FILES -->
	{# list}
	<tr>
		<!-- FILE IS NOT A DIRECTORY -->
		{@eq key=isDir value=false type="boolean"}
			<td class="tags">
				{@eq key=extension value=txt type="string"}{/eq}
				{@eq key=extension value=gif type="string"}{/eq}
				{@eq key=extension value=mp4 type="string"}{/eq}
				<img src="/img/file-noExtension.svg">
				<!-- <img src="https://cdn3.iconfinder.com/data/icons/brands-applications/512/File-512.png"> -->
				<div>
					<a href='/file/preview/{path}' target="_blank">{name}</a>
					<!-- HAS TAG -->
					{@gt key=tags.length value=0}
						<!-- <p class="tags">{tags}</p> -->
						<p>WEB, CLOUD, PROJECT</p>
					{/gt}
					<!-- NO TAG -->
					<p class="tags"><i class="fas fa-plus-circle"></i></p>
				</div>
			</td>
			<td>
				{size}
			</td>
			<td>
				<!-- {timeCreated}<br> -->
				{dateCreated}
			</td>
			<td>
				<form class="file-actions" method="POST">
					<input type="submit" value="" formaction="/file/{path}?_method=DELETE" class="deleteFile">
					<input type="submit" value="" formaction="" class="getLink">
					<input type="submit" value="" formaction="/file/{path}?_method=GET" class="downloadFile">
					<input type="submit" value="" formaction="" class="renameFile">
				</form>
			</td>
		<!-- FILE IS A DIRECTORY -->
		{:else}
			<td>
				<i class="fas fa-folder"></i>
				<a href='/dir/display/{path}'>{name}</a>
				<!-- <p class="tags">{tags}</p> -->
			</td>
			<td>
			</td>
			<td>
				<!-- {timeCreated}<br> -->
				{dateCreated}
			</td>
			<td>
				<form class="file-actions" method="POST">
					<input type="submit" value="" formaction="/dir/{path}?_method=DELETE" class="deleteDirectory">
					<input type="submit" value="" formaction="" class="getDirectoryLink">
					<input type="submit" value="" formaction="" class="downloadDirectory">
					<input type="submit" value="" formaction="" class="renameDirectory">
				</form>
			</td>
		{/eq}
	</tr>
	{/ list}
</html>
