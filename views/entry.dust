<html>
	<!-- SELF LINK -->
	<tr>
		<td class="top-action">
			<img src="/img/folder.svg">
			<a href='/dir/display/{path}'>.</a>
		</td>
		<td></td>
		<td></td>
		<td></td>
	</tr>
	<!-- LINK TO PARENT -->
	{@eq key=squery value=true type="boolean"}
		{@ne key=previous value="" type="string"}
			<tr>
				<td class="top-action">
					<img src="/img/folder.svg">
					<a href='/dir/display/{previous}'>..</a>
				</td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		{/ne}
	{/eq}
	<!-- FILES -->
	{# list}
	<tr>
		<!-- FILE IS NOT A DIRECTORY -->
		{@eq key=isDir value=false type="boolean"}
			<td class="tags">
				{> icons /}
				<div>
					<a href='/file/preview/{path}' target="_blank">{name}</a>
					{> tags /}
				</div>
			</td>
			<td>
				{size}
			</td>
			<td>
				{dateCreated}
			</td>
			<td class="file-actions">
				<form method="POST">
					<input class="deleteFile" data-toggle="modal" data-target="#deleteFileModal" >
					<input type="submit" value="" formaction="" class="getLink">
					<input type="submit" value="" formaction="/file/{path}?_method=GET" class="downloadFile">
					<input class="renameFile" data-toggle="modal" data-target="#renameFileModal">
				</form>
			</td>
		<!-- FILE IS A DIRECTORY -->
		{:else}
			<td>
				<img src="/img/folder.svg">
				<a href='/dir/display/{path}'>{name}</a>
			</td>
			<td></td>
			<td>
				{dateCreated}
			</td>
			<td class="file-actions">
				<form method="POST">
					<input class="deleteDirectory" data-toggle="modal" data-target="#deleteDirectoryModal">
					<input class="getDirectoryLink" type="submit" value="" formaction="">
					<input class="downloadDirectory"type="submit" value="" formaction="/dir/download/{path}?_method=GET">
					<input class="renameDirectory" data-toggle="modal" data-target="#renameDirectoryModal">
				</form>
			</td>
		{/eq}
		{> modals_right /}
	</tr>
	{/ list}
</html>
