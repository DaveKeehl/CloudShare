<html>
	<!-- SELF LINK -->
	<tr>
		<td class="top-action">
			<img src="/img/folder.svg">
			<a href='/dir/display/{path}'>.</a>
		</td>
		<td>
		</td>
		<td>
		</td>
		<td>
		</td>
	</tr>
	<!-- LINK TO PARENT -->
	{@eq key=squery value=true type="boolean"}
		{@ne key=previous value="" type="string"}
			<tr>
				<td class="top-action">
					<img src="/img/folder.svg">
					<a href='/dir/display/{previous}'>..</a>
				</td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		{/ne}
	{/eq}
	<!-- FILES -->
	{# list}
	<tr>
		<!-- FILE IS NOT A DIRECTORY -->
		{@eq key=isDir value=false type="boolean"}
			<td class="tags">
				{> icons /}
				<div>
					<a href='/file/preview/{path}' target="_blank">{name}</a>
					{> tags /}
				</div>
			</td>
			<td>
				{size}
			</td>
			<td>
				<!-- {timeCreated}<br> -->
				{dateCreated}
			</td>
			<td class="file-actions">
					<input type="submit" value="" class="deleteFile" data-toggle="modal" data-target="#deleteModal" >
					<form method="POST">
						<input type="submit" value="" formaction="" class="getLink">
						<input type="submit" value="" formaction="/file/{path}?_method=GET" class="downloadFile">
					</form>
				<input type="submit" value="" class="renameFile" data-toggle="modal" data-target="#renameModal">
				{> modals_right /}
			</td>
		<!-- FILE IS A DIRECTORY -->
		{:else}
			<td>
				<img src="/img/folder.svg">
				<a href='/dir/display/{path}'>{name}</a>
			</td>
			<td>
			</td>
			<td>
				<!-- {timeCreated}<br> -->
				{dateCreated}
			</td>
			<td class="file-actions">
				<input type="submit" value="" class="deleteDirectory" data-toggle="modal" data-target="#deleteModal" >

				<form method="POST">
					<input type="submit" value="" formaction="" class="getDirectoryLink">
					<input type="submit" value="" formaction="/dir/download/{path}?_method=GET" class="downloadDirectory">
				</form>

				<input type="submit" value="" class="renameDirectory" data-toggle="modal" data-target="#renameModal">

				{> modals_right /}
			</td>
		{/eq}
	</tr>
	{/ list}
</html>
