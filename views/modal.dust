<html>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <!-- MODAL FOR MK DIR -->
                <div class="makeDirModal">
                    <div class="modal-body">
                        <input type="text" name="folder_name" placeholder="New folder">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" formaction="/dir/{path}">OK</button>
                    </div>
                </div>

                <!-- MODAL FOR DELETE -->
                <div class="deleteObjectModal">
                    <div class="modal-body">
                        <p>Do you really want to delete this?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                        <button type="submit" class="btn btn-primary" formaction="/dir/{path}?_method=DELETE">Yes</button>
                    </div>
                </div>

                <!-- MODAL FOR DIR RENAMING -->
                <div class="renameObjectModal">
                    <div class="modal-body">
                        <input type="text" name="folder_name" placeholder="{path}">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" formaction="/dir/new/{path}?_method=PUT">Rename</button>
                    </div>
                </div>

                <!-- MODAL FOR DIR TAGGING -->
                <div class="tagObjectModal">
                    <div class="modal-body">
                        <input type="text" name="folder_name" placeholder="{path}">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" formaction="/dir/new/{path}?_method=PUT">Rename</button>
                    </div>
                </div>

                <!-- MODAL FOR DIR UPLOADING -->
                <div class="uploadObjectModal">
                    <div class="modal-body">
                        <input type="file" name="uploadedFile">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" formaction="/dir/new/{path}?_method=PUT">Upload</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

</html>
